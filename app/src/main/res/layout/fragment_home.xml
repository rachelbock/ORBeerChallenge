<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rage.oregonbeerchallenge.HomeFragment">

        <TextView
            android:id="@+id/home_fragment_welcome_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_to_the_oregon_beer_challenge"
            android:padding="5dp"
            android:textSize="18sp"
            android:textColor="@android:color/primary_text_light"
            android:layout_centerHorizontal="true"
            />

    <TextView
        android:id="@+id/home_fragment_progress_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_fragment_welcome_text_view"
        android:text="@string/no_visited_breweries"
        android:padding="5dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/home_fragment_breweries_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/breweries"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textColor="@android:color/primary_text_light"
        android:layout_below="@id/home_fragment_progress_text_view"
        />
    <TextView
        android:id="@+id/home_fragment_tried_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="@string/tried"
        android:layout_below="@id/home_fragment_progress_text_view"
        android:textSize="18sp"
        android:textColor="@android:color/primary_text_light"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_fragment_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/home_fragment_tried_text_view"
        android:layout_marginTop="5dp"
        >

    </android.support.v7.widget.RecyclerView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/home_fragment_view_breweries_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_black_48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        />

</RelativeLayout>
